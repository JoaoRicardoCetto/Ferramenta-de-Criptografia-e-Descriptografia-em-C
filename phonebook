def lerNome():
    nome = input("Digite um nome: ")
    while nome.isalpha == False or len(nome) < 3:
        print("Nome inválido")
        nome = input("Digite um nome: ")
    return nome


def lerTelefone(pessoa):
    tel = input("Insira o número de telefone de %s: " %pessoa)
    while tel.isdigit() == False or len(tel) < 9:
        print("Número inválido")
        tel = input("Insira o número de telefone de %s: " %pessoa)        
    return int(tel)


def lerLetra():
    letra = input("Digite a primeira letra do nome que você deseja encontrar: ").upper()
    return letra


def imprimirDados(vetN , vetT):
    inicialNome = lerLetra()
    cont = 0
    while cont != len(vetT):
        if vetN[0] == inicialNome[0]:
            print("Nome: %s \nTelefone: %d" %(vetN[cont] , vetT[cont]))
            
        cont = cont + 1


def desejaContinuar():
    continuar = input("Deseja continuar? (S/N): ").upper()
    while continuar.isalpha() == False or (continuar != 'S' and continuar !='N'):
        print("Letra inválida")
        continuar = input("Deseja continuar? (S/N): ").upper()
    return continuar
    

def lerVetorDados(vetN , vetT):
    continuar = 'S'
    while continuar == 'S':
        nome = lerNome()
        telefone = lerTelefone(nome)
        vetN.append(nome)
        vetT.append(telefone)
        continuar = desejaContinuar()
    
    return (vetN , vetT)



def main():
    vetNomes = []
    vetTel = []
    dados = lerVetorDados(vetNomes , vetTel)
    imprimirDados(vetNomes , vetTel)



main()
